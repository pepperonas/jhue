<?import com.jfoenix.controls.JFXButton?><?import com.jfoenix.controls.JFXTextField?><?import com.jfoenix.controls.JFXToggleButton?><?import javafx.scene.control.Label?><?import javafx.scene.control.Menu?><?import javafx.scene.control.MenuBar?><?import javafx.scene.control.MenuItem?><?import javafx.scene.control.SeparatorMenuItem?><?import javafx.scene.layout.GridPane?><?import javafx.scene.layout.HBox?><?import javafx.scene.layout.Pane?><?import javafx.scene.layout.VBox?>
<VBox fx:id="vbox_root" spacing="15" xmlns="http://javafx.com/javafx/8.0.112"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.celox.MainController">
    <MenuBar>
        <menus>
            <Menu text="File">
                <items>
                    <MenuItem text="Preferences" onAction="#onMenuPreferences" />
                    <MenuItem text="Show Log" onAction="#onMenuShowLog" />
                    <SeparatorMenuItem />
                    <MenuItem text="Exit" onAction="#onMenuExit" />
                </items>
            </Menu>
            <Menu text="Help">
                <items>
                    <MenuItem text="About" onAction="#onMenuAbout" />
                    <MenuItem text="Instructions" onAction="#onMenuInstructions" />
                </items>
            </Menu>
        </menus>
    </MenuBar>
    <Label fx:id="label_info_1" />
    <Label fx:id="label_info_2" />
    <VBox alignment="CENTER" spacing="25">
        <HBox spacing="10" alignment="CENTER"></HBox>
        <Label fx:id="label_info_result_count"
            style="-fx-font-size: 16px; -fx-font-family: monospace;" />
        <GridPane fx:id="grid_actions_higher" alignment="CENTER"></GridPane>

        <Pane prefWidth="Infinity" minHeight="5" style="-fx-background-color: lightblue;" />
        <GridPane fx:id="grid_actions_lower" alignment="CENTER" gridLinesVisible="false" hgap="20"
            vgap="20">
            <JFXButton fx:id="btn_register" onAction="#onBtnRegister" text="REGISTER"
                GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <JFXTextField fx:id="tf_lamp" labelFloat="true" promptText="Lamp"
                GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <JFXToggleButton fx:id="tgl_btn_on_off" onAction="#onTglBtnOnOff" text="ON/OFF"
                GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <JFXTextField fx:id="tf_hue" labelFloat="true" promptText="Hue" GridPane.columnIndex="0"
                GridPane.rowIndex="2" />
            <JFXTextField fx:id="tf_saturation" labelFloat="true" promptText="Saturation"
                GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <JFXTextField fx:id="tf_brightness" labelFloat="true" promptText="Brightness"
                GridPane.columnIndex="2" GridPane.rowIndex="2" />
            <JFXButton fx:id="btn_put_color" onAction="#onBtnPutColor" text="SEND COLOR"
                GridPane.columnIndex="3" GridPane.rowIndex="2" />
            <JFXButton fx:id="btn_info" onAction="#onBtnInfo" text="INFO" GridPane.columnIndex="0"
                GridPane.rowIndex="3" />
            <JFXButton fx:id="btn_reset" onAction="#onBtnReset" text="RESET"
                GridPane.columnIndex="1" GridPane.rowIndex="3" />
        </GridPane>
    </VBox>
</VBox>
